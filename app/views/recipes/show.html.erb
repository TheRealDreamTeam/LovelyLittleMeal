<div class="d-flex p-3 gap-3 h-100">
  <%# Recipe section - scrollable when content overflows %>
  <div class="flex-grow-1 d-flex flex-column bg-white p-3 overflow-hidden">
    <div id="recipe-details" class="overflow-y-auto flex-grow-1" style="min-height: 0;">
      <%= render "recipes/details", recipe: @recipe %>
    </div>
  </div>
  <%# Chat section - fixed height with scrollable messages and fixed form at bottom %>
  <div style="min-width: 300px;" class="d-flex flex-column bg-white p-3 overflow-hidden">
    <p class="mb-2 flex-shrink-0">Chat title: <%= @chat.title %></p>
    <div id="chat-messages" class="overflow-y-auto flex-grow-1 mb-3" style="min-height: 0;">
      <% if @messages.any? %>
        <%= render @messages %>
      <% else %>
        <p>What are we cooking today?</p>
      <% end %>
    </div>
    <div id="message-form" class="flex-shrink-0">
      <%= form_with url: message_recipe_path(@recipe),
                    method: :post,
                    data: { turbo_frame: "_top" } do |f| %>
        <%= f.text_field :content,
                         placeholder: "Type...",
                         autofocus: true,
                         autocomplete: "off",
                         id: "message-content" %>
        <%= f.submit "Send", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
